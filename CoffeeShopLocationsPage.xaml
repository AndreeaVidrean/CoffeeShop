<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeShop.CoffeeShopLocationsPage"
             Title="Coffee Shop Locations">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Location" Clicked="OnAddLocationClicked" />
    </ContentPage.ToolbarItems>
    <ListView x:Name="locationsListView" Margin="20" ItemSelected="OnLocationSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Name}" Detail="{Binding Address}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
