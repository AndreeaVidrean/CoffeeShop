<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CoffeeShop"
    x:Class="CoffeeShop.AppShell">

    <!-- Pagina Home -->
    <FlyoutItem Title="Home" Icon="home_icon.png">
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <!-- Pagina About -->
    <FlyoutItem Title="About" Icon="about_icon.png">
        <ShellContent Title="About" ContentTemplate="{DataTemplate local:AboutPage}" />
    </FlyoutItem>

    <!-- Pagina Meniu -->
    <FlyoutItem Title="Meniu" Icon="menu_icon.png">
        <ShellContent Title="Meniu" ContentTemplate="{DataTemplate local:MenuItemPage}" />
    </FlyoutItem>

</Shell>
