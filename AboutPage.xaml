<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeShop.AboutPage"
             Title="About Our Coffee Shop">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="coffee_cup.jpg"
                   SemanticProperties.Description="A steaming cup of coffee"
                   HeightRequest="64" />
            <Label FontSize="22" FontAttributes="Bold" Text="Welcome to Coffee Shop" VerticalOptions="Center" />
        </HorizontalStackLayout>
        <Label Text="Version 1.0" FontSize="18" HorizontalOptions="Center" />
        <Label Text="Discover the joy of coffee! This app allows you to explore our menu, customize your orders, and stay updated with our special offers."
               FontSize="16" TextColor="DarkSlateGray" />
        <Label Text="Features:" FontSize="18" FontAttributes="Bold" Margin="0,10,0,0" />
        <VerticalStackLayout Margin="10,0,0,0">
            <Label Text="• Browse our coffee and snacks menu." />
            <Label Text="• Customize your favorite drinks." />
            <Label Text="• Find nearby Coffee Shop locations." />
            <Label Text="• Receive notifications about special promotions." />
        </VerticalStackLayout>
        <Label Text="We hope you enjoy our app and your coffee experience!" 
               FontSize="16" FontAttributes="Italic" HorizontalOptions="Center" Margin="10,20,10,0" />
    </VerticalStackLayout>
</ContentPage>
