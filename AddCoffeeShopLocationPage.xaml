<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeeShop.AddCoffeeShopLocationPage"
             Title="Add Location">
    <StackLayout Margin="20">
        <Editor Placeholder="Enter name" Margin="20" Text="{Binding Name}" />
        <Editor Placeholder="Enter address" Margin="20" Text="{Binding Address}" />
        <Button Text="Save Location" Clicked="OnSaveButtonClicked" />
    </StackLayout>
</ContentPage>
